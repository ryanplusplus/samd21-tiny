{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Target (jlink)",
      "cwd": "${workspaceRoot}",
      "executable": "${workspaceFolder}/build/tiny.elf",
      "request": "launch",
      "type": "cortex-debug",
      "servertype": "openocd",
      "configFiles": [
        "${workspaceRoot}/openocd/debug.cfg"
      ],
      "svdFile": "${workspaceFolder}/lib/svd/ATSAMD21G18A.svd",
      "preLaunchTask": "debug-deps"
    },
    {
      "name": "Target (black_magic)",
      "cwd": "${workspaceRoot}",
      "executable": "${workspaceFolder}/build/tiny.elf",
      "request": "launch",
      "type": "cortex-debug",
      "servertype": "bmp",
      "BMPGDBSerialPort": "/dev/ttyACM0",
      "powerOverBMP": "disable",
      "svdFile": "${workspaceFolder}/lib/svd/ATSAMD21G18A.svd",
      "preLaunchTask": "debug-deps",
    },
    {
      "name": "Target (black_magic, powered)",
      "cwd": "${workspaceRoot}",
      "executable": "${workspaceFolder}/build/tiny.elf",
      "request": "launch",
      "type": "cortex-debug",
      "servertype": "bmp",
      "BMPGDBSerialPort": "/dev/ttyACM0",
      "powerOverBMP": "enable",
      "svdFile": "${workspaceFolder}/lib/svd/ATSAMD21G18A.svd",
      "preLaunchTask": "debug-deps",
    }
  ]
}
